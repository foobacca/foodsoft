- title t("g.admin")

%p
  %i= t("admin.tagline")
.left_column{:style => "width:48%"}
  .box_title
    %h2= t("admin.users.newest_users")
  .column_content
    %table
      %tr
        %th= t("g.username")
        %th= t("g.name")
        %th= t("admin.users.created_on")
      - for user in @users
        %tr{:class => cycle('even','odd', :name => 'users')}
          %td= link_to user.nick, [:admin, user]
          %td=h user.name
          %td= format_date(user.created_on)
    %br/
    = link_to t("admin.users.all_users"), admin_users_path
    |
    = link_to t("admin.users.new_user"), new_admin_user_path

.right_column{:style => "width:48%"}
  .box_title
    %h2= t("admin.groups.newest_groups")
  .column_content
    %table
      %tr
        %th= t("admin.groups.group_name")
        %th= t("admin.groups.type")
        %th= t("admin.groups.members")
      - for group in @groups
        %tr{:class => cycle('even','odd', :name => 'groups')}
          %td= link_to group.name, [:admin, group]
          %td= group.class.human_name
          %td= group.users.size
    %br/
    = link_to t("admin.groups.all_buyers_groups"), admin_ordergroups_path
    |
    = link_to t("admin.groups.new_buyers_group"), new_admin_ordergroup_path
    |
    = link_to t("admin.groups.all_working_groups"), admin_workgroups_path
    |
    = link_to t("admin.groups.new_working_group"), new_admin_workgroup_path
